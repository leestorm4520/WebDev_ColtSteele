<% layout('layouts/boilerplate') %> 
    <h1>All Campgrounds</h1>
    <div>
        <% for(let campground of campgrounds){%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img src="img-fluid" alt="" src="campground.image">
                    </div>

                </div>
            </div>
            <%if(campground.title){ %>
            <li><a href="/campgrounds/<%=campground._id%>"><%=campground.title%></a></li>
            <% } %> 
            <% } %> 
    </div>
      
    
